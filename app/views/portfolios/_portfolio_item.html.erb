<div class="card md-4 box-shadow" data-id="<%= portfolio_item.id %>">
  <%= image_tag portfolio_img(portfolio_item.thumb_image, 'thumb'), width: '100%' %>
  
  <div class="card-body">
    <p class="card-text">
      <span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span> <%= portfolio_item.subtitle %>
    </p>
    <div class="d-flex justify-content-between align-items-center">
      <div class="btn-group">
        <%= link_to 'View', portfolio_path(portfolio_item), class: "btn btn-sm btn-outline-secondary"%>
        <%= link_to 'Edit', edit_portfolio_path(portfolio_item), class: "btn btn-sm btn-outline-secondary"%>
      </div>
      <small class="text-muted">9 mins</small>
    </div>
  </div>
</div>