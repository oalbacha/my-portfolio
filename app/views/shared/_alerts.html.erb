<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Omar Albacha", sticky: false) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Omar Albacha", sticky: false) %>
<% else %>
  <%= js add_gritter(flash[:notice],  title: "Omar Albacha", sticky: false) %>
<% end %>