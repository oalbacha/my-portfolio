<div class="comment-card">
  <div class="card">
    <div class="card-block">
      <div class="row">
        <div class="col-md-2">
          <%= gravatar_helper comment.user %>
          
        </div>
        <div class="col-md-10">
          
          <div>
            <%= comment.content %>  
          </div>

          <br>

          <div class="comment-attribution">
            <b><%= comment.user.name %></b>  
            <%= distance_of_time_in_words(comment.created_at, Time.now) %> ago
          </div>
          
        </div>
        
      </div>
    </div>
  </div>
</div>
